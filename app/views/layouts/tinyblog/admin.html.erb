<!DOCTYPE html>
<html>
  <head>
    <title>Tinyblog</title>
    <%= stylesheet_link_tag    "tinyblog/tinyblog", media: "all" %>
    <%= javascript_include_tag "tinyblog/tinyblog" %>
    <%= yield :head if content_for? :head %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        <% alert_type = [:success, :notice].include?(name) ? "success" : "warning" %>
        <div class="alert alert-<%= alert_type %>">
          <a class="close" data-dismiss="alert">&#215;</a>
          <%= content_tag :div, msg, :id => "flash_#{alert_type}" %>
        </div>
      <% end %>
    <% end %>


    <nav class="navbar navbar-default" role="navigation">
       <div class="container">
         
         <div class="navbar-header">
           <button type="button" class="navbar-toggle" data-toggle="collapse">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <%= link_to "Site", Tinyblog.blog_name_links_to, :class => "navbar-brand" %>
         </div>


         <div class="collapse navbar-collapse">
           <div class="nav-bar">
             <ul class="nav navbar-nav navbar-right">
               <li><%= link_to t('tinyblog.nav.admin.view_blog'), posts_path %></li>
               <li><%= link_to t('tinyblog.nav.admin.posts'), admin_posts_path %></li>
               <li><%= link_to t('tinyblog.nav.admin.authors'), admin_authors_path %></li>
             </ul>
           </div>
         </div>  
       </div>
     </nav>

    <%= yield %>

  </body>
</html>
