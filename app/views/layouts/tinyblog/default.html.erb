<!DOCTYPE html>
<html>
<head>
  <title>Tinyblog</title>
  <%= stylesheet_link_tag    "tinyblog/tinyblog", media: "all" %>
  <%= javascript_include_tag "tinyblog/tinyblog" %>
  <%= yield :head if content_for? :head %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <nav>
      <ul class="blog-nav">
        <li><%= link_to Tinyblog.blog_name, Tinyblog.blog_name_links_to || root_path %></li>
      </ul>

      <ul class="admin-nav">
        <% if tinyblog_admin_logged_in? %>
          <li><%= link_to t('tinyblog.nav.frontend.to_admin'), admin_root_path %></li>
        <% end %>
      </ul>
    </nav>
  </header>

  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <% alert_type = [:success, :notice].include?(name) ? "success" : "warning" %>
      <div class="alert alert-<%= alert_type %>">
        <a class="close" data-dismiss="alert">&#215;</a>
        <%= content_tag :div, msg, :id => "flash_#{alert_type}" %>
      </div>
    <% end %>
  <% end %>

<%= yield %>

</body>
</html>
