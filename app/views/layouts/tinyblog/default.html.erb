<!DOCTYPE html>
<html>
  <head>

    <title><%= content_for?(:title) ? yield(:title) : Tinyblog.blog_name  %></title>

    <% if content_for? :meta_description %>
      <meta name="Description" content="<%= yield :meta_description %>"></meta>
    <% end %>

    <%= stylesheet_link_tag    "tinyblog/tinyblog", media: "all" %>
    <%= javascript_include_tag "tinyblog/tinyblog" %>
    <%= yield :head if content_for? :head %>
    <%= csrf_meta_tags %>

  </head>

  <body>

    <nav class="navbar navbar-default" role="navigation">
       <div class="container">
         
         <div class="navbar-header">
           <button type="button" class="navbar-toggle" data-toggle="collapse">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <%= link_to Tinyblog.blog_name, Tinyblog.blog_name_links_to || root_path %>
         </div>


         <div class="collapse navbar-collapse">
           <div class="nav-bar">
             <ul class="nav navbar-nav navbar-right">
               <% if tinyblog_admin_logged_in? %>
                 <li><%= link_to t('tinyblog.nav.frontend.to_admin'), admin_root_path %></li>
               <% end %>
             </ul>
           </div>
         </div>  
       </div>
     </nav>

     <% flash.each do |name, msg| %>
       <% if msg.is_a?(String) %> 
         <% alert_type = [:success, :notice].include?(name.to_sym) ? "success" : "warning" %>
         <div class="alert alert-<%= alert_type %>">
           <a class="close" data-dismiss="alert">&#215;</a>
           <%= content_tag :div, msg, :id => "flash_#{alert_type}" %>
         </div>
       <% end %>
     <% end %>

    <%= yield %>

  </body>
</html>
