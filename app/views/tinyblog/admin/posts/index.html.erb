<div class="container">
  
  <div class="panel-header">
    <ul class="nav nav-pills">
      <%= content_tag :li, class: ('active' if params[:tab] == 'All' ) do %>
        <%= link_to 'All', admin_posts_path(tab: 'All') %>
      <% end %>

      <%= content_tag :li, class: ('active' if params[:tab] == 'Trash' ) do %>
        <%= link_to 'Trash', admin_posts_path(tab: 'Trash') %>
      <% end %>
    </ul>
  </div>

  <table id="posts" class="table posts">
    <colgroup>
      <col class="title" >
      <col class="delete" >
      <col class="edit">
    </colgroup>
    <thead>
      <tr>
        <th>Title</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <%= content_tag_for :tr, post do %>
          <td>
            <%= link_to post.title, post_path(post) %>
          </td>
          <td>
            <%= link_to "Edit", edit_admin_post_path(post), :class => "btn btn-default btn-sm btn-block" %>
          </td>
          <td>
            <% if post.destroyed? %>

              <%= button_to t('tinyblog.ui.restore'), restore_admin_post_path(post), :method => :put, :class => 'btn btn-danger btn-sm btn-block', confirm: 'Are you sure?' %>              

            <% else %>

              <%= button_to t('tinyblog.ui.delete'), admin_post_path(post), :method => :delete, :class => 'btn btn-danger btn-sm btn-block', confirm: 'Are you sure?' %>

            <% end %>
          </td>
        <% end %>
      <% end %>
    </tbody>
  </table>


  <%= button_to t('tinyblog.posts.new'), new_admin_post_path, :method => :get, :class => 'btn btn-primary' %>

</div>