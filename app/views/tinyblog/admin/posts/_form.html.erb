<%= simple_form_for [tinyblog, :admin, @post] do |f| %>
  <%= f.input :title %>
  <%= f.association :author, :collection => Tinyblog::Author.all, :label_method => :fullname, :value_method => :id, :include_blank => false %>
  <%= f.input :body, :input_html => {:'data-image-upload-url' => admin_pictures_url()} %>
  <%= f.input :meta_description %>
  <%= f.button :submit, @post.new_record? ? "Publish" : "Update" %>
<% end %>

